{
    "manifest_version": 3,
    "name": "Floating Timer Extension",
    "version": "1.0",
    "description": "Displays a floating timer with stop and reset buttons on every website.",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "js": ["content.js"]
      }
    ]
  }
  